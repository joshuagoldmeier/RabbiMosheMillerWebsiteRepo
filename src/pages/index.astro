      { title: "Abraham: From Love to Fear (Part 2)", url: "https://ravmiller.shiurim.pages.dev/content/30" },
      { title: "Abraham, Isaac and the Impact of Laughter", url: "https://ravmiller.shiurim.pages.dev/content/31" },
      { title: "Esther (Part 1)", url: "https://ravmiller.shiurim.pages.dev/content/32" },
      { title: "Esther (Part 2)", url: "https://ravmiller.shiurim.pages.dev/content/33" },
